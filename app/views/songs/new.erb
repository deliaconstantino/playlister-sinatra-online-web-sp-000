<h1>Create a New Song:</h1>

<form action="/songs" method="POST">
  <p>
    <label for="Name">Name</label>
    <input type="text" name="song[name]" id="Name">
  </p><br>

  <h3>Please Enter the Artist Name:</h3>
  <p>
    <label for="Artist Name">Artist Name</label>
    <input type="text" name="artist[name]" id="Artist Name">
  </p><br>

  <h3>Please check one or more genres for your song:</h3>

  <% Genre.all.each do |genre| %>
    <p><input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.name %>">
    <label><%= genre.name %></label></p>
    <% end %>


  <br>
  <input type="submit" value="Create">
</form>
